#lang-select-wrap
  display: block
  position: relative

#lang-select-label
  color: color-main-accent
  font-family: font-sans
  span
    padding-left: 8px 

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit
  &:hover
    cursor: pointer